{
  "manifest_version": 3,
  "name": "StockIcon",
  "version": "1.0.0",
  "description": "Show stock in icon.",
  "icons": {
    "16": "icon.svg",
    "32": "icon.svg",
    "48": "icon.svg",
    "128": "icon.svg"
  },
  "action": {
    "default_icon": {
      "16": "icon.svg",
      "32": "icon.svg",
      "48": "icon.svg",
      "128": "icon.svg"
    },
    "default_title": "StockIcon"
  },
  "options_ui": {
    "page": "options.html"
  },
  "host_permissions": ["*://qos.hk/*"],
  "permissions": ["alarms", "storage"],
  "background": {
    "scripts": ["background.js"],
    "service_worker": "background.js"
  }
}
